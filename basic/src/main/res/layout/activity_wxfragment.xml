<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acts.WXFragmentActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/wx_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/wx_bottom_layout"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/wx_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="#c4c4c4">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/wx_chat"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:background="@color/selector_color">
            <ImageView
                android:id="@+id/wx_chat_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="center"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/wx_chat_txt"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="消息"
                android:gravity="center"
                android:textColor="@color/selector_color_txt"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/wx_contacts"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:background="@color/selector_color">
            <ImageView
                android:id="@+id/wx_contacts_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="center"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"
                android:background="@color/selector_color"/>
            <TextView
                android:id="@+id/wx_contacts_txt"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="联系人"
                android:gravity="center"
                android:textColor="@color/selector_color_txt"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/wx_find"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:background="@color/selector_color">
            <ImageView
                android:id="@+id/wx_find_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="center"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"
                android:background="@color/selector_color"/>
            <TextView
                android:id="@+id/wx_find_txt"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="附近"
                android:gravity="center"
                android:textColor="@color/selector_color_txt"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/wx_profile"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:background="@color/selector_color">
            <ImageView
                android:id="@+id/wx_profile_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="center"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"
                android:background="@color/selector_color"/>
            <TextView
                android:id="@+id/wx_profile_txt"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="我"
                android:gravity="center"
                android:textColor="@color/selector_color_txt"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>