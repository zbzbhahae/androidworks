<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextDraw">
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textBackGround" format="reference|color"/>

        <attr name="inputType">
            <enum name="number" value="1"/>
            <enum name="text" value="2"/>
            <enum name="password" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundProgressBar" >
        <attr name="RoundProgressBar_outColor" format="color"/>
        <attr name="RoundProgressBar_innerColor" format="color"/>
        <attr name="RoundProgressBar_borderWidth" format="dimension"/>
        <attr name="RoundProgressBar_textSize" format="dimension"/>
        <attr name="RoundProgressBar_textColor" format="color"/>
        <attr name="RoundProgressBar_percent" format="float"/>
    </declare-styleable>

    <declare-styleable name="LetterSideBar">
        <attr name="LetterSideBar_textColor" format="color"/>
        <attr name="LetterSideBar_textSelectedColor" format="color"/>
        <attr name="LetterSideBar_textSize" format="dimension"/>
        <attr name="LetterSideBar_spacing" format="dimension"/>
    </declare-styleable>


</resources>